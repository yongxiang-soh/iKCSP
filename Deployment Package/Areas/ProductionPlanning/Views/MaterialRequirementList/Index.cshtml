@{
    ViewBag.ScreenId = "TCPP081F";
    ViewBag.Title = "Material Requirement List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model KCSG.Web.Areas.ProductionPlanning.ViewModels.MaterialRequirementList.MaterialReqListSearchViewModel
@using KCSG.Core;
@using KCSG.Core.Controls
@using KCSG.Core.CustomControls
@using KCSG.jsGrid.MVC
<script src="/Scripts/areas/MaterialReqList/MaterialReqList.js" type="text/javascript"></script>

<script>
    var formUrl = {
        urlSearch: '@Url.Action("SearchByMaterial", "MaterialRequirementList")',

    }
</script>



<div class="col-lg-12">

    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "searchForm" }))
    {
        <div class="panel panel-danger" id="">
            <div class="panel-heading">Search Criteria</div>
            <div class="panel-body">
                <div class="row form-group">
                    <div class="col-lg-3">
                        @Html.ExtLabelFor(model => model.DateSearch)
                    </div>
                    <div class="col-lg-3">
                        @Html.ExtDateTimeFor(model => model.DateSearch, new DateTimeOption() {Format = "MM/YYYY", ViewMode = "years"})
                    </div>
                    <div class="col-lg-1"></div>
                    <div class="col-lg-5">
                        <button type="button" class="btn btn-flat btn-default btn-less-5-chars" id="btnSearch" onclick=" search() ">Search</button>
                        <button type="button" class="btn btn-flat btn-default btn-less-5-chars" onclick="Clear(this)">Clear</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="col-lg-12" id="dvRes" >
    <div class="panel panel-danger">
        <div class="panel-heading" id="dvResName">Material Requirement List</div>
        <div class="panel-body">
            <div class="row form-group" id="dvMaterial" style="display: none">
                <div class="col-lg-12">
                    @Html.Grid(Model.Grid)
                </div>
            </div>
            <div class="row form-group" id="dvDefault">
                <div class="col-lg-12">
                    @Html.Grid(Model.DefaultGrid)
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-12">
                    <input type="button" id="btnPrint" class="btn btn-flat btn-default btn-less-5-chars  " disabled="disabled" style="display: block !important" onclick=" Print() " name="Print" value="Print" />
                </div>
            </div>
        </div>
    </div>
</div>

