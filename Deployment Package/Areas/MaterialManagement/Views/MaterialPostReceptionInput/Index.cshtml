@{
    ViewBag.ScreenId = "TCRM021F";
    ViewBag.Title = "Material Post Reception Input";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model KCSG.Web.Areas.MaterialManagement.ViewModels.MaterialPostReceptionInput.MaterialPostReceptionInputViewModel
@using KCSG.Core.CustomControls
@using KCSG.jsGrid.MVC

<script src="~/Scripts/areas/materialPostReceptionInput/materialPostReceptionInput.js"></script>
<script>
    var formUrl = {
        urlPostReception: '@Url.Action("PostReception","MaterialPostReceptionInput")',
        urlFindMaterialReceptionInput: '@Url.Action("FindPostReceptionInputMaterial", "MaterialPostReceptionInput")'
    }
</script>

<div class="col-lg-12">
    <div class="panel panel-danger" id="searchForm">
        <div class="panel-heading">Search Criteria</div>
        <div class="panel-body">
            <div ondblclick=" postReception() "
                 class="form-group">
                @Html.Grid(Model.Grid)
            </div>

            <button class="btn btn-default btn-flat col-lg-1 col-md-12 col-sm-12 col-xs-12" 
                    id="btnPostReception" 
                    onclick="postReception()">Post Input</button>
        </div>
    </div>

</div>


<div class="col-md-12" style="margin-top: 20px;">
    <div id="formPlaceholder"></div>
</div>
