@{
    ViewBag.ScreenId = "TCFC071F";
    ViewBag.Title = "Search Kneading Line";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using KCSG.Core.Constants
@using KCSG.jsGrid.MVC
@model KCSG.Web.Areas.KneadingCommand.ViewModels.KneadingCommandControlViewModel


<script src="~/Scripts/areas/inquiry/inquiryKneadLineNo.js"></script>
<div class="col-lg-12" style="float: left">
    @*<p style="text-align: right">@DateTime.Now.ToString("dd/MM/yyyy hh:mm:ss")</p>*@
</div>
<div class="col-lg-12">

    <form class="panel panel-danger"
          onsubmit="searchMaterials(event)">
        <div class="panel-heading">Search Criteria</div>
        <div class="panel-body">

            <!-- Line label -->
            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12" style="text-align: center">
                Line
            </div>

            <!-- Conventional checkbox -->
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @*@Html.RadioButtonFor(x => x.KneadingLine, Constants.KndLine.Megabit)*@
                <input type="radio"
                       name="KneadingLine"
                       value="@Constants.KndLine.Conventional.ToString("D")"
                       checked="checked" />
                <span> Conventional</span>
            </div>

            <!-- Megabit checkbox -->
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @*@Html.RadioButtonFor(x => x.KneadingLine, Constants.KndLine.Megabit, new { Checked = "checked" })*@
                <input type="radio"
                       name="KneadingLine"
                       value="@Constants.KndLine.Megabit.ToString("D")"/>
                <span> Megabit</span>
            </div>
        </div>

    </form>

</div>

<div class="col-lg-12">
        <div class="panel panel-danger">

            <div class="panel-body">
                <div class="form-group" onclick=" clickKneadingTable() ">
                    @Html.Grid(Model.Grid)
                </div>
                <div class="form-group pull-left">

                    <button id="btnStart"
                            class="btn btn-default btn-flat btn-less-5-chars"
                            onclick=" startKneadingCommand() ">
                        Command
                    </button>
                </div>
            </div>

        </div>
    </div>
