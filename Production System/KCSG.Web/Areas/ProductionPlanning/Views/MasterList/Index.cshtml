@{
    ViewBag.Title = "Master List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model KCSG.Web.Areas.ProductionPlanning.ViewModels.MasterList.MasterListSearchViewModel
@using KCSG.Core.Constants
@using KCSG.Core.CustomControls
@using KCSG.Core.Helper
@using KCSG.jsGrid.MVC

<!-- Master list style -->
<link href="~/Content/AdminLTE/screens/screen-master-list.css" rel="stylesheet" />

<!-- Master list business handler -->
<script src="/Scripts/areas/masterList/masterList.js" type="text/javascript"></script>


<div class="col-lg-12">

    <form id="searchForm"
          class="panel panel-danger">
        <div class="panel-heading">Search Criteria</div>
        <div class="panel-body">

            <div class="row form-group">

                <div class="col-lg-3 col-md-3 col-sm-3">
                    <label>Master Classification</label>
                </div>
                <div class="col-lg-8"></div>
                @Html.ExtRadioButtonFor(m => m.SearchBy, EnumsHelper.GetListItemsWithDescription<Constants.InquirySearchConditionWarehouseLocation>(Constants.InquirySearchConditionWarehouseLocation.Material), new { @id = "rdoMaterial" }, true, 2)
                @*<div class="col-lg-2 col-md-2 col-sm-2">
                    <input type="radio"
                           name="Master"
                           checked="checked"
                           id="rdoMaterial" style="margin-right: 3px"
                           value="0" />Material
                </div>

                <div class="col-lg-2 col-md-2 col-sm-2">
                    <input type="radio"
                           name="Master"
                           id="rdoPreProduct" style="margin-right: 3px"
                           value="1" />Pre-Product
                </div>

                <div class="col-lg-2 col-md-2 col-sm-2">
                    <input type="radio" name="Master"
                           id="rdoProduct" style="margin-right: 3px"
                           value="2" />Product
                </div>*@
            </div>

            <div class="row form-group">
                <div class="col-lg-3 col-md-3 col-sm-3">
                    @Html.ExtLabelFor(model => model.MasterCode)
                </div>
                <div class="col-lg-4 col-md-4 col-sm-5 form-group">
                    @Html.ExtTextBoxFor(model => model.MasterCode, new {@id = "txtMasterCodeSearch"})
                </div>
                <div class="col-lg-5">
                    <input type="submit"
                           class="btn btn-default btn-flat btn-less-5-chars"
                           value="Search">

                    <button type="button"
                            class="btn btn-default btn-flat btn-less-5-chars"
                            onclick="Clear(this)">
                        Clear
                    </button>
                </div>
            </div>

          
        </div>
    </form>
</div>

<div class="col-lg-12"
     id="dvRes"
     style="display: none">

    <div class="panel panel-danger">
        <div class="panel-heading" id="dvResName"></div>
        <div class="panel-body">
            <div class="row form-group"
                 id="dvMaterial" style="display: none">
                <div class="col-lg-12">
                    @Html.Grid(Model.GridMaterial)
                </div>
            </div>
            <div class="row form-group"
                 id="dvPreProduct" style="display: none">
                <div class="col-lg-12">
                    @Html.Grid(Model.GridPreProduct)
                </div>
            </div>
            <div class="row form-group"
                 id="dvProduct" style="display: none">
                <div class="col-lg-12">
                    @Html.Grid(Model.GridProduct)
                </div>
            </div>

            <div class="form-group center-block">
                <button type="button"
                        class="btn btn-default btn-flat btn-less-5-chars"
                        onclick=" exportReport(event) "
                        name="Print">
                    <span>Print</span>
                </button>
            </div>

        </div>
    </div>
</div>

