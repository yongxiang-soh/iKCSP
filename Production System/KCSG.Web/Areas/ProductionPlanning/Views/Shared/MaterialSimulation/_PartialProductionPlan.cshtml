@using KCSG.Core.Constants
@using KCSG.Core.CustomControls
@using KCSG.jsGrid.MVC
@model KCSG.Web.Areas.ProductionPlanning.ViewModels.MaterialSimulation.ProductPlanPopUp

<div class="panel panel-danger">
    <div class="panel-heading"> Production Plan Simulation - TCPP055F </div>
    <div class="panel-body">
        <div class="row form-group">
            <div class="col-lg-6">
                <div class="col-lg-5">
                    @Html.ExtLabelFor(m => m.Command)
                </div>
                <div class="col-lg-7">
                    @Html.ExtTextBoxFor(model => model.Command, new { @disabled = true })
                </div>
            </div>

            <div class="col-lg-6">
                <div class="col-lg-5">
                    @Html.ExtLabelFor(m => m.LotQuantity)
                </div>
                <div class="col-lg-7">
                    @Html.ExtTextBoxFor(model => model.LotQuantity, new {@disabled = true})
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-lg-6">
                <div class="col-lg-5">
                    @Html.ExtLabelFor(m => m.PreProductCode)
                </div>
                <div class="col-lg-7">
                    @Html.ExtTextBoxFor(model => model.PreProductCode, new { @disabled = true })
                </div>
            </div>

            <div class="col-lg-6">
                <div class="col-lg-5">
                    @Html.ExtLabelFor(m => m.PreProductName)
                </div>
                <div class="col-lg-7">
                    @Html.ExtTextBoxFor(model => model.PreProductName, new { @disabled = true })
                </div>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-lg-12">
                @Html.Grid(Model.Grid)
            </div>
        </div>
    </div>
</div>