@using KCSG.Core.Constants
@using KCSG.Core.CustomControls
@using KCSG.jsGrid.MVC
@model KCSG.Web.Areas.ProductionPlanning.ViewModels.MaterialSimulation.ProductionPlanSumilationViewModel

@using (Html.BeginForm("", ""))
{
    <div class="panel panel-danger">
        <div class="panel-heading">Product Plan Simulation</div>
        <div class="panel-body">
            <div class="row form-group">
                <div class="col-xs-6">
                    <div class="col-xs-3">
                        @Html.LabelFor(m => m.Command)
                    </div>
                    <div class="col-xs-9">
                        @Html.ExtTextBoxFor(model => model.Command, new { @disabled = true })
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="col-xs-3">
                        @Html.LabelFor(m => m.LostQuantity)
                    </div>
                    <div class="col-xs-9">
                        @Html.ExtTextBoxFor(model => model.LostQuantity, new { @disabled = true })
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-xs-6">
                    <div class="col-xs-3">
                        @Html.LabelFor(m => m.PreProductCode)
                    </div>
                    <div class="col-xs-9">
                        @Html.ExtTextBoxFor(model => model.PreProductCode)
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="col-xs-3">
                        @Html.LabelFor(m => m.PreProductName)
                    </div>
                    <div class="col-xs-9">
                        @Html.ExtTextBoxFor(model => model.PreProductName)
                    </div>
                </div>
            </div>

            <div class="row form-group">
                @Html.Grid(Model.Grid)
            </div>
        </div>
    </div>
}

