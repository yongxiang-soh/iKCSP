@{
    ViewBag.ScreenId = "TCPP011F";
    ViewBag.Title = "Material Master DB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model KCSG.Web.Areas.ProductionPlanning.ViewModels.Material.MaterialSearchViewModel
@using KCSG.Core;
@using KCSG.Core.CustomControls
@using KCSG.jsGrid.MVC
<script src="/Scripts/areas/material/material.js" type="text/javascript"></script>

<script>
    var formUrl = {
        urlEdit: '@Url.Action("Edit", "Material")',
        urlDelete: '@Url.Action("Delete", "Material")',
        urlLoadSupplierCode: '@Url.Action("LoadSupplier", "Material")'
    }
</script>

<div class="col-lg-12">

    <div class="panel panel-danger" id="searchForm">
        <div class="panel-heading">Search Criteria</div>
        <div class="panel-body">
            <div class="col-lg-3">
                @Html.ExtLabelFor(model => model.MaterialCode)
            </div>
            <div class="col-lg-3 form-group">
                @Html.ExtTextBoxFor(model => model.MaterialCode, new { @id = "txtMaterialCodeSearch" })
            </div>
            <div class="col-lg-5">
                <button type="button" class="btn btn-flat btn-default btn-less-5-chars" id="btnSearch" onclick=" search() ">Search</button>
                <button type="button" class="btn btn-flat btn-default btn-less-5-chars " onclick="Clear(this)">Clear</button>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="panel panel-danger">
        <div class="panel-heading">List of Material</div>
        <div class="panel-body">
            <div class="form-group">
                @Html.Grid(Model.Grid)
                </div>
            <div class="form-group">
                
                <button class="btn btn-flat btn-default btn-less-5-chars" i
                        id="btnAdd"
                        onclick=" addNew() ">Add</button>

                <button class="btn btn-flat btn-default btn-less-5-chars"
                        id="btnUpdate"
                        onclick=" UpdateItem() ">Update</button>

                <button class="btn btn-flat btn-default btn-less-5-chars" 
                        id="btnDelete" onclick=" deleteItem() ">Delete</button>
            </div>
            </div>
        
    </div>
</div>


<div class="col-md-12" style="margin-top: 20px;">
    <div id="formPlaceholder"></div>
</div>

