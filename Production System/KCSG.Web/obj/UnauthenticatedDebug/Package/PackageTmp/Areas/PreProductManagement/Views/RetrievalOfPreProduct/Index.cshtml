@{
    ViewBag.ScreenId = "TCIP031F";
    ViewBag.Title = "Retrieval of Pre-product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model KCSG.Web.Areas.PreProductManagement.ViewModels.RetrievalOfPreProductViewModel
@using System.Activities.Statements
@using KCSG.Core;
@using KCSG.Core.Controls
@using KCSG.Core.CustomControls
@using KCSG.jsGrid.MVC

@*<script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
<script src="~/Scripts/areas/signalrCommon.js"></script>
<script src="/signalr/hubs"></script>*@
<script src="~/Scripts/areas/RetrievalOfPreProduct/retrievalOfPreProduct.js"></script>

<script>
    var formUrl = {
        urlRetrieval: '@Url.Action("Edit", "RetrievalOfPreProduct")',
        urlCheckConveyor: '@Url.Action("CheckConveyor", "RetrievalOfPreProduct")'

    }
</script>

@using (Html.BeginForm("", "", FormMethod.Post, new {id = "storageForm"}))
{
    <div class="col-lg-12">
        <div class="panel panel-danger">
            <div class="panel-heading">Storage of Empty Pre-product Container</div>
            <div class="panel-body">
                @Html.Grid(Model.Grid)
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <div class="col-xs-6">
                        <div class="col-xs-5">
                            @Html.ExtLabelFor(model => model.TabletisingLine)
                        </div>
                        <div class="col-xs-7">
                            @Html.ExtTextBoxAddOnFor(model => model.TabletisingLine, CustomControlConstants.AddOn.Search, "#modalTabletingLineSelect", new {style = "width:100%", @id = "txtTabletisingLine"})
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="col-xs-5">
                            @Html.ExtLabelFor(model => model.TabletisingLineName)
                        </div>
                        <div class="col-xs-7">
                            @Html.ExtTextBoxFor(model => model.TabletisingLineName, new {style = "width:100%", @id = "txtTabletisingName", @readonly = "readonly"})
                        </div>
                    </div>
                </div>

                <button type="button" class="btn btn-default btn-flat btn-less-5-chars" id="btnRetrieval" onclick=" Retrieval() ">Retrieval</button>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        
    </div>
}