@using KCSG.Core.Constants
@using KCSG.Core.Controls
@using KCSG.Core.CustomControls
@using KCSG.Core.Helper
@model KCSG.Web.Areas.EnvironmentManagement.ViewModels.SearchCriteriaModel
<div class="panel panel-danger">
    <div class="panel-heading">
        <span>Search Criteria</span>
    </div>
    <div class="panel-body">
        <div class="row form-group">
            <div class="col-lg-2">
                @Html.LabelFor(model => model.Mode)
            </div>
            <div class="col-lg-6" style="padding: 0">
                @Html.ExtRadioButtonFor(model => model.Mode, EnumsHelper.GetListItemsWithDescription<Constants.EnvMode>(Constants.EnvMode.SpecLine).OrderBy(i => int.Parse(i.Value)), new { }, true, 6)
            </div>
        </div>

        <div class="row form-group">
            <div class="col-lg-2">
                @Html.LabelFor(model => model.EnvironmentDate)<i class="required" aria-required="true">*</i>
            </div>
            <div class="col-lg-3">
                @Html.ExtDateTimeFor(model => model.EnvironmentDate, new DateTimeOption() { Format = "DD/MM/YYYY" })
            </div>

            <div class="col-lg-1">
                <div class="col-lg-2"><label>@Model.Location<i class="required" aria-required="true">*</i></label></div>
            </div>

            <div class="col-lg-3">
                @Html.ExtDropDownListFor(m => m.Location, (IEnumerable<SelectListItem>)ViewBag.ListLocation)
            </div>

            <div class="col-lg-3">
                <input type="submit" class="btn btn-default btn-flat btn-less-5-chars" value="Go" />
            </div>
        </div>
    </div>
</div>
