@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using KCSG.Core.Constants
@using KCSG.Core.CustomControls
@using KCSG.Core.Helper
@model KCSG.Web.Areas.Inquiry.ViewModels.InquiryByShelfStatus.InquiryByShelfStatusSearchViewModel
@section scripts{
    <script src="~/Scripts/areas/inquiry/inquiryByShelfStatus.js"></script>
    <script src="~/Scripts/areas/inquiry/inquiryBase.js"></script>
}
@using (Html.ExtModalFor("locationMaterialStatus", ExtModal.ModalSize.Large, null))
{
    using (Html.ExtModalBodyFor())
    {
    }
}

<div class="col-lg-5">
    @Html.HiddenFor(m=>m.Type)
    <div class="panel panel-danger">
        <div class="panel-heading">Executing Classification</div>
        <div class="panel-body">
            @((object) Html.ExtRadioButtonFor(model => model.ExecutingClassification, EnumHelper.GetSelectList(typeof(Constants.ExecutingClassification), Constants.ExecutingClassification.Search), new {onchange = " InquiryByShelfStatus.onChange() "}, true, 6))

        </div>
    </div>
    <div class="panel panel-danger">
        <div class="panel-heading">Search Condition</div>
        <div class="panel-body">
            @((object) Html.ExtRadioButtonFor(model => model.SearchCondition, EnumsHelper.GetListItemsWithDescription<Constants.InquirySearchConditionShelfStatus>(Constants.InquirySearchConditionShelfStatus.FirstRow), new {onchange = " InquiryByShelfStatus.onChange() "}, true, 6))
        </div>
    </div>
</div>
<div class="col-lg-7">
    <div class="panel panel-danger">
        <div class="panel-heading">Legend</div>
        <div class="panel-body">
            <ul>
                @if (Model.Type == Constants.InquirySearchConditionWarehouseLocation.Material)
                {
                    <li>Ep: Empty</li>
                    <li>Wp: Warehouse Pallet</li>
                    <li>Sp: Supplier Pallet</li>
                    <li>Mt: Material</li>
                    <li>Rs: Reserved for Storage</li>
                    <li>Rr: Reserved for Retrieval</li>
                    <li>Fb: Forbid</li>
                    <li>Pf: Physical Forbid</li>
                }
                @if (Model.Type == Constants.InquirySearchConditionWarehouseLocation.PreProduct)
                {
                    <li>Ep: Empty</li>
                    <li>Ec: Empty Container</li>
                    <li>St: Stock</li>
                    <li>Rs: Reserved for Storage</li>
                    <li>Rr: Reserved for Retrieval</li>
                    <li>Fb: Forbid</li>
                    <li>Pf: Physical Forbid</li>
                }
                
                @if (Model.Type == Constants.InquirySearchConditionWarehouseLocation.Product)
                {
                    <li>Ep: Empty</li>
                    <li>Wp: Warehouse Pallet</li>
                    <li>St: Stock</li>
                    <li>Os: Out/Spec</li>
                    <li>Ex: External</li>
                    <li>Rs: Reserved for Storage</li>
                    <li>Rr: Reserved for Retrieval</li>
                    <li>Fb: Forbid</li>
                    <li>Pf: Physical Forbid</li>
                }
                
            </ul>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div id="formPlaceholder"></div>
</div>

