@{
    ViewBag.ScreenId = "TCPP071F";
    ViewBag.Title = "Pre-Product  Plan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model KCSG.Web.Areas.ProductionPlanning.ViewModels.PreProductPlan.PreProductPlanSearchViewModel
@using KCSG.Core;
@using KCSG.Core.Controls
@using KCSG.Core.CustomControls
@using KCSG.jsGrid.MVC
<script src="/Scripts/areas/prePdtPln/prePdtPln.js" type="text/javascript"></script>

<script>
    var formUrl = {
        urlEdit: '@Url.Action("Edit", "PreProductPlan")',
        urlDelete: '@Url.Action("Delete", "PreProductPlan")',
        urlGetProductName :'@Url.Action("GetProductCode","PdtPln")'
    }
</script>



<div class="col-lg-12">

    @using (Html.BeginForm("", "",FormMethod.Post,new{id="searchFrom"}))
    {
        <div class="panel panel-danger" id="searchForm">
            <div class="panel-heading">Search Criteria</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-3">
                        @Html.ExtLabelFor(model => model.YearMonth)
                    </div>
                    <div class="col-xs-3">
                       @Html.ExtDateTimeFor(model => model.YearMonth, new DateTimeOption() {  Format = "MM/YYYY", ViewMode = "years"  })
                       </div>
                    <div class="col-xs-5">
                        <button type="button" class="btn btn-flat btn-default btn-less-5-chars" id="btnSearch" onclick=" search() ">Search</button>
                        <button type="button" class="btn btn-flat btn-default  btn-less-5-chars" onclick="Clear(this)">Clear</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="col-lg-12">
    <div class="panel panel-danger" id="searchForm">
        <div class="panel-heading">List of Pre-Product  Plan</div>
        <div class="panel-body">
            <div class=" form-group">
                @Html.Grid(Model.Grid)
                </div>
            <div class=" form-group">
                <button class="btn btn-flat btn-default btn-less-5-chars" id="btnAdd" onclick=" addNew() ">Add</button>
                <button class="btn btn-flat btn-default btn-less-5-chars" onclick=" edit() " id="btnUpdate">Update</button>
                <button class="btn btn-flat btn-default btn-less-5-chars" id="btnDelete" onclick=" deleteItem() ">Delete</button>
                <button class="btn btn-flat btn-default btn-less-5-chars" disabled="disabled" id="btnPrint" onclick=" Print() ">Print</button>
            </div>

            </div>
       
    </div>
</div>

<div class="col-md-12" style="margin-top: 20px;">
    <div id="formPlaceholder"></div>
</div>
